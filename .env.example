POSTGRES_USER=aquamine
POSTGRES_PASSWORD=changeme
POSTGRES_DB=aquamine_db
DATABASE_URL=postgresql+psycopg://aquamine:changeme@db:5432/aquamine_db
REDIS_URL=redis://redis:6379/0
# For VPS deployment, replace localhost with your VPS IP or domain:
# NEXT_PUBLIC_API_BASE_URL=http://YOUR_VPS_IP/api
# NEXT_PUBLIC_API_BASE_URL=http://your-domain.com/api
#
# CRITICAL: These variables must be set in .env BEFORE running docker compose build
# Next.js bakes these values into the JavaScript bundle at build time
NEXT_PUBLIC_API_BASE_URL=http://localhost:8181
NEXT_PUBLIC_WS_BASE_URL=ws://localhost:8181

# Frontend API URL (used by dashboard)
NEXT_PUBLIC_API_URL=http://localhost:8181

# Backend CORS (comma-separated origins). Must match dashboard's public URL.
CORS_ORIGINS=http://localhost:3000

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/login
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/access-pending
SUPERADMIN_EMAIL=
